@using PharmacyMvcClient.Models;
@model List<Staff>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/
bootstrap.css" rel="stylesheet" />

    <link href="~/twitter-bootstrap/css/
bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center
my-2 p-2">
            Staff  LİST
        </div>
        <div class=" text-right pr-2 my-2">
            @* @Html.ActionLink("Add","Sporcular",null,new{@class="btn btn-striped"})*@
            <a asp-action="Add"
               asp-controller="Staff"
               class="btn btn-primary btn-sm">Ekle</a>
        </div>
        <table class="table table-hover table-striped
table-bordered table-sm">
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.StaffID</td>
                    <td>@staff.StaffName</td>
                    <td>@staff.StaffAge</td>
                    <td>@staff.StaffPhone</td>
                    <td>@staff.StaffAdress</td>
                    <td>@staff.StaffSalary</td>
                    <td>@staff.BranchID</td>
                    <th>İşlem</th>
                    <td>
                        <a asp-action="Edit" asp-controller="Staff"
                       asp-route-id="@staff.StaffID" class="btn btn-warning btn-sm">Edit</a>
                        <a onclick="return confirm('Silmek isteğinizden emin misiniz?')"
                       asp-action="Delete" asp-controller="Staff"
                       asp-route-id="@staff.StaffID"
                       class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>