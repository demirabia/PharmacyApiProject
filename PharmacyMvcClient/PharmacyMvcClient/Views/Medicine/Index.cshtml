@using PharmacyMvcClient.Models;
@model List<Medicine>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<html>
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/
bootstrap.css" rel="stylesheet" />

    <link href="~/twitter-bootstrap/css/
bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-2">
        <div class="bg-dark text-white-50 lead text-center my-2 p-2">
            MEDİCİNE  LİST
        </div>
        <div class=" text-right pr-2 my-2">
            @* @Html.ActionLink("Add","Sporcular",null,new{@class="btn btn-striped"})*@
            <a asp-action="Add"
               asp-controller="Medicine"
               class="btn btn-primary btn-sm">Ekle</a>
        </div>
        <table class="table table-hover table-striped table-bordered table-sm">
            @foreach (var medicine in Model)
            {
                <tr>
                    <td>@medicine.MedicineID</td>
                    <td>@medicine.MedicineName</td>
                    <td>@medicine.MedicineDescription</td>
                    <td>@medicine.MedicinePrice</td>
                    <td>@medicine.CompanyID</td>
                    <th>İşlem</th>
                    <td>
                        <a asp-action="Edit" asp-controller="Medicine"
                       asp-route-id="@medicine.MedicineID" class="btn btn-warning btn-sm">Edit</a>
                        <a onclick="return confirm('Silmek isteğinizden emin misiniz?')"
                       asp-action="Delete" asp-controller="Medicine"
                       asp-route-id="@medicine.MedicineID"
                       class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>